<?xml version="1.0" encoding="UTF-8"?>
<theme>
   <formatVersion>7</formatVersion>
   
   	<variables>
		<mainColor>3ad6f9</mainColor>
	</variables>
   
   <feature supported="carousel">
   <view name="system">
      <video name="background" extra="false">            
         <path>./_inc/images/red/background_nobuttons.m4v</path>
      </video>  
      <image name="background_bottom" extra="true">               
         <path>./_inc/images/red/background_bottom.png</path>
      </image>                               
    </view>
    </feature>
   
    <view name="basic">
      <video name="background" extra="false">            
         <path>./_inc/images/red/background_nobuttons.m4v</path>
      </video>               
    </view> 
    
    <view name="detailed,video">
      <video name="background" extra="false">            
         <path>./_inc/images/red/background_nobuttons.m4v</path>
      </video>               
    </view> 
  
	<view name="menu">
	<menuText name="menutext, menutitle">
         <separatorColor>${mainColor}</separatorColor>
	</menuText>
	</view>
	
	<view name="basic,detailed,video">
      <textlist name="gamelist">      
         <selectedColor>${mainColor}</selectedColor>                         
      </textlist>
   </view> 
	
</theme>
